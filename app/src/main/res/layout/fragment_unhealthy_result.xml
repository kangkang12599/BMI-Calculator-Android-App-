<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UnhealthyResultFragment">

    <LinearLayout
        android:id="@+id/imageUnhealthy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_mood_bad_24"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/labelGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="@dimen/wide_margin"
            android:layout_marginEnd="@dimen/wide_margin"
            android:layout_marginBottom="@dimen/wide_margin"
            style="@style/form_label_style"/>

        <TextView
            android:id="@+id/labelAgeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="@dimen/wide_margin"
            android:layout_marginEnd="@dimen/wide_margin"
            android:layout_marginBottom="@dimen/wide_margin"
            style="@style/form_label_style"/>

        <TextView
            android:id="@+id/labelBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="@dimen/wide_margin"
            android:layout_marginEnd="@dimen/wide_margin"
            android:layout_marginBottom="@dimen/wide_margin"
            style="@style/form_label_style"/>

        <TextView
            android:id="@+id/labelCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="@dimen/wide_margin"
            android:layout_marginEnd="@dimen/wide_margin"
            android:layout_marginBottom="@dimen/wide_margin"
            style="@style/form_label_style"/>

    </LinearLayout>
</layout>